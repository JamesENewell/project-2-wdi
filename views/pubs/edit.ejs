<form action="/pubs/<%= pub.id %>" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <div>
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= pub.title %>">
    </div>
    <div>
        <label for="url">Url</label>
        <input type="url" name="url" id="url"  value="<%= pub.url %>">
    </div>
</form>
